<html>
    <head>
        <title>Index Page</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/register.css">
    </head>

    <body>

        <%- messages() %>

        <div>

            <% if(locals.errors) { %>

                <% errors.forEach(function(error) { %> 

                    <div class="alert alert-danger"> <%= error.msg %> </div>
                
                <% }) %> 
            
            <% } %>

            <div class="header">

                <div class="text">
                    <a href="/" > Autumn Fest 2020 </a>
                </div>

            </div>

            <div class="box">

                <form method="POST" action="/users/register">

                    Name:
                    <br>
                    <input name="name" id="name" type="text" placeholder="Enter Name" value="<%= (!!locals.name)?name:''  %>">
                    <br><br>
                    Email:
                    <br>
                    <input name="email" id="email" type="email" placeholder="Enter Email ID" value="<%= (!!locals.email)?email:''  %>">
                    <br><br>
                    Password:
                    <br>
                    <input name="password" id="password" type="password" placeholder="Enter Password" value="<%= (!!locals.password)?password:''  %>">
                    <br><br>
                    Confirm Password:
                    <br>
                    <input name="password2" id="password2" type="password" placeholder="Re-Enter Password" value="<%= (!!locals.password2)?password2:''  %>">
                    <br>
                    <p>                    
                        <a href="/users/login"> Already Have an Account?Login </a>
                    </p>
                    <br>
                    <button name="submit" id="submit" type="submit">Submit</button>            
        
                </form>

            </div>

            

        </div>

    </body>
</html>